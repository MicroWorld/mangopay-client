<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{ISO8601} [%4.4thread] %-5level %logger{5}:%line - %message%n</pattern>
    </encoder>
  </appender>

  <logger name="org.microworld.mangopay" level="debug"/>

  <root level="info">
    <appender-ref ref="console"/>
  </root>
</configuration>
